{
  "name": "climbinglife",
  "version": "1.0.0",
  "description": "My repo for learning CQRS/This-less and other juicy stuff.",
  "main": "index.js",
  "scripts": {
    "commit": "cz",
    "release": "standard-version",
    "prepare": "husky install",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prebuild": "rm -rf dist",
    "build": "tsc --project tsconfig.json",
    "start:dev": "ts-node-dev --respawn src/index.ts",
    "test": "mocha --require ts-node/register tests/**/*.spec.ts --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bukareszt/ClimbingLife.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bukareszt/ClimbingLife/issues"
  },
  "homepage": "https://github.com/Bukareszt/ClimbingLife#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@tsconfig/node16": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.6",
    "mocha": "^10.1.0"
  }
}
